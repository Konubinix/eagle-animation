{
  "name": "eagle-animation",
  "description": "EagleAnimation is an awesome, modern, free and open-source animation software.",
  "version": "1.0.0",
  "private": true,
  "author": "Maxime Baconnais / Brick Ã  Brack",
  "dependencies": {
    "ffmpeg-static": "^2.4.0",
    "mkdirp": "^0.5.1",
    "mobx": "^5.9.4",
    "mobx-react": "^5.4.3",
    "prop-types": "^15.7.2",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-scripts": "^3.0.1",
    "stripchar": "^1.2.1",
    "electron": "^5.0.1"
  },
  "scripts": {
    "start": "concurrently \"cross-env BROWSER=none craco start\" \"wait-on http://localhost:3000 && cross-env ENV=development electron ./\"",
    "build": "cross-env BROWSER=none craco build && cross-env ENV=production build -c.extraMetadata.main=build/electron.js",
    "postinstall": "install-app-deps",
    "lint": "eslint ./ --ext .js,.vue,.jsx",
    "lint-fix": "eslint ./ --ext .js,.vue,.jsx --fix"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "devDependencies": {
    "@babel/plugin-proposal-decorators": "^7.4.4",
    "@craco/craco": "^5.0.2",
    "babel-eslint": "^10.0.1",
    "concurrently": "^4.1.0",
    "cross-env": "^5.2.0",
    "electron-builder": "^20.40.2",
    "eslint": "^5.16.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-plugin-import": "^2.17.2",
    "husky": "^2.2.0",
    "typescript": "^3.4.5",
    "wait-on": "^3.2.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint-fix"
    }
  },
  "homepage": "./",
  "main": "public/electron.js",
  "build": {
    "appId": "com.eagle-animation.app",
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    }
  }
}
