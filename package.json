{
  "name": "stop-motion-animator",
  "version": "0.0.1",
  "description": "An awesome, free and open-source animation software",
  "main": "assets/electron.js",
  "scripts": {
    "electron-dev": "concurrently \"webpack-dev-server\" \"wait-on http://localhost:8080 && electron .\"",
    "electron-pack": "webpack && build --em.main=build/electron.js"
  },
  "homepage": "./",
  "build": {
    "appId": "com.stop-motion-animator.app",
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    }
  },
  "author": "Maxime Baconnais",
  "devDependencies": {
    "babel": "^6.23.0",
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "concurrently": "^3.5.1",
    "copy-webpack-plugin": "^4.3.0",
    "css-loader": "^0.28.7",
    "electron": "~1.7.8",
    "electron-builder": "^19.49.0",
    "style-loader": "^0.19.0",
    "wait-on": "^2.0.2",
    "webpack": "^3.10.0",
    "webpack-dev-server": "^2.9.7"
  },
  "dependencies": {
    "electron-is-dev": "^0.3.0",
    "ffmpeg-static": "^2.1.0",
    "react": "^16.2.0",
    "react-dom": "^16.2.0"
  }
}
