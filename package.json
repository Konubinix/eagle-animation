{
  "name": "eagle-animation",
  "description": "EagleAnimation is an awesome, modern, free and open-source animation software.",
  "version": "1.0.0",
  "private": true,
  "author": "Maxime Baconnais / Brick Ã  Brack",
  "dependencies": {
    "@sentry/browser": "^5.4.0",
    "array-move": "^2.1.0",
    "ffmpeg-static": "^2.4.0",
    "mkdirp": "^0.5.1",
    "mobx": "^5.9.4",
    "mobx-react": "^6.0.2",
    "prop-types": "^15.7.2",
    "rc-slider": "^8.6.11",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-keyboard-event-handler": "^1.4.1",
    "react-scripts": "^3.0.1",
    "react-sortable-hoc": "^1.9.1",
    "react-tooltip": "^3.10.0",
    "stripchar": "^1.2.1",
    "uuid": "^3.3.2"
  },
  "scripts": {
    "start": "concurrently \"cross-env BROWSER=none craco start\" \"wait-on http://localhost:3000 && cross-env ENV=development electron ./\"",
    "build": "cross-env BROWSER=none craco build && cross-env ENV=production build -c.extraMetadata.main=build/electron.js",
    "postinstall": "install-app-deps",
    "lint": "eslint ./ --ext .js,.vue,.jsx --ignore-path .gitignore",
    "lint-fix": "eslint ./ --ext .js,.vue,.jsx --fix --ignore-path .gitignore"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "devDependencies": {
    "electron": "^5.0.2",
    "@babel/plugin-proposal-decorators": "^7.4.4",
    "@craco/craco": "^5.2.1",
    "babel-eslint": "^10.0.1",
    "concurrently": "^4.1.0",
    "cross-env": "^5.2.0",
    "electron-builder": "^20.41.0",
    "eslint": "^5.16.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-plugin-import": "^2.17.3",
    "husky": "^2.3.0",
    "typescript": "^3.5.1",
    "wait-on": "^3.2.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint-fix"
    }
  },
  "homepage": "./",
  "main": "public/electron.js",
  "build": {
    "appId": "com.eagle-animation.app",
    "directories": {
      "buildResources": "./public"
    },
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "win": {
      "files": [
        "!node_modules/ffmpeg-static/bin/darwin/*",
        "!node_modules/ffmpeg-static/bin/linux/*"
      ]
    },
    "linux": {
      "files": [
        "!node_modules/ffmpeg-static/bin/darwin/*",
        "!node_modules/ffmpeg-static/bin/win32/*"
      ]
    },
    "mac": {
      "files": [
        "!node_modules/ffmpeg-static/bin/win32/*",
        "!node_modules/ffmpeg-static/bin/linux/*"
      ]
    }
  }
}